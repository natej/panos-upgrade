{
  "panorama": {
    "host": "panorama.example.com",
    "username": "admin",
    "password": "YOUR_PANORAMA_PASSWORD",
    "api_key": "",
    "rate_limit": 10,
    "timeout": 300
  },
  "firewall": {
    "username": "admin",
    "password": "YOUR_FIREWALL_PASSWORD",
    "timeout": 300,
    "software_check_timeout": 90,
    "software_info_timeout": 120,
    "job_stall_timeout": 1800,
    "max_reboot_poll_interval": 300,
    "reboot_ready_timeout": 600,
    "reboot_initial_delay": 90,
    "download_retry_attempts": 3
  },
  "workers": {
    "max": 5,
    "queue_size": 1000
  },
  "discovery": {
    "retry_attempts": 3
  },
  "validation": {
    "tcp_session_margin": 5.0,
    "route_margin": 0.0,
    "arp_margin": 0.0,
    "min_disk_gb": 5.0,
    "retry_attempts": 3,
    "retry_delay": 10,
    "retry_backoff": 2.0,
    "custom_metrics": []
  },
  "logging": {
    "level": "INFO",
    "max_size_mb": 100,
    "retention_days": 30
  },
  "paths": {
    "work_dir": "/opt/panos-upgrade",
    "upgrade_paths": "/opt/panos-upgrade/config/upgrade_paths.json"
  }
}

